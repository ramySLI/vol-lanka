rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if the user is an Admin
    function isAdmin() {
      // In production, you would ideally use custom claims like request.auth.token.admin == true
      // Here we explicitly hardcode the owner's UID for security over the applications collection
      return isAuthenticated() && request.auth.uid == 'VgDjrSqImwQcX4TBKUtH1gu8vbQ2';
    }

    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /programs/{programId} {
      // Anyone can see programs
      allow read: if true;
      // Only admins can write/update programs
      allow write: if isAdmin(); 
    }

    match /applications/{applicationId} {
      // Users can create and read/update their own applications
      allow create: if isAuthenticated() 
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.personalInfo.firstName is string
        && request.resource.data.personalInfo.firstName.size() > 0
        && request.resource.data.personalInfo.lastName is string
        && request.resource.data.personalInfo.lastName.size() > 0
        && request.resource.data.personalInfo.phone is string
        && request.resource.data.personalInfo.phone.size() > 0
        && request.resource.data.experience.motivation is string
        && request.resource.data.experience.motivation.size() > 0
        && request.resource.data.travel.insuranceAssent == true;

      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Admins can read and update all applications
      allow read, write: if isAdmin();
    }
    
    match /users/{userId} {
      // Users can manage their own user profiles
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can manage all user profiles
      allow read, write: if isAdmin();
    }
  }
}
